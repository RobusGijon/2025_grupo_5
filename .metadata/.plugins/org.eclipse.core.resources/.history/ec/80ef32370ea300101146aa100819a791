package test_modeloDatos;

import static org.junit.Assert.*;
import org.junit.Before;
import org.junit.Test;

import junit.framework.Assert;
import modeloDatos.Auto;
import modeloDatos.Cliente;
import modeloDatos.Pedido;
import util.Constantes;

public class Test_2_Auto {
	
	private Auto autoMascota;
	private Auto autoSinMascota;
	private Cliente cliente;
	private Pedido pedidoConMascotaYbaul;
	
	private static final String PATENTE = "AB123CD";
	private static final int CANTIDAD_PLAZAS = 3;
	private static final int CANT_PASAJEROS = 2;
	private static final int KM = 1000;
	
	@Before
	public void setUp() throws Exception {
		cliente = new Cliente("Juan", "Perez", "123456789");
		
		pedidoConMascotaYbaul = new Pedido(
			cliente, 
			CANT_PASAJEROS, 
			true,  // mascota
			true,  // baul
			KM, 
			Constantes.ZONA_PELIGROSA
		);
		
		autoMascota = new Auto(PATENTE, CANTIDAD_PLAZAS, true);
		autoSinMascota = new Auto(PATENTE, CANTIDAD_PLAZAS, false);
	}

	@Test
	public void test_getPuntajePedido_sinMascotas() {
		Assert.assertEquals(autoSinMascota.getPuntajePedido(pedidoConMascotaYbaul), null);
	}
	
	@Test
	public void test_getPuntajePedido_conMascotas() {
		Assert.assertTrue(autoMascota.getPuntajePedido(pedidoConMascotaYbaul) != null);
	}
	
	@Test
	public void test_getPuntajePedido_excesoCapacidad() {
		int cantPasajeros = autoMascota.getCantidadPlazas() + 1;
		Pedido pedido = new Pedido(cliente, cantPasajeros, true, true, 1000, Constantes.ZONA_PELIGROSA);
		Assert.assertEquals(autoMascota.getPuntajePedido(pedido), null);
	}
	
	@Test
	public void test_getPuntajePedido_capacidadValida() {
		int cantPasajeros = autoMascota.getCantidadPlazas();
		Pedido pedido = new Pedido(cliente, cantPasajeros, true, true, 1000, Constantes.ZONA_PELIGROSA);
		Assert.assertTrue(autoMascota.getPuntajePedido(pedido) != null);
	}
	
	@Test
	public void test_getPuntajePedido_usoBaul() {
		Pedido pedidoBaul = pedidoConMascotaYbaul;
		
		if (pedidoBaul.getCantidadPasajeros() <= autoMascota.getCantidadPlazas()) {
			
		}
		
		
		
		
	}
	

}
