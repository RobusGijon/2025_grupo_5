package test_modeloDatos;

import static org.junit.Assert.*;

import org.junit.Before;
import org.junit.Test;

import junit.framework.Assert;
import modeloDatos.Auto;
import modeloDatos.Cliente;
import modeloDatos.Pedido;
import util.Constantes;

public class Test_2_Auto {
	
	Auto autoMascota;
	Auto autoSinMascota;
	Cliente cliente;
	
	String patente;
	int cantidadPlazas;
	boolean mascota;

	Pedido pedido;
	boolean mascotaPedido;
	boolean baulPedido;
	
	
	@Before
	public void setUp() throws Exception {
		cliente = new Cliente("A","A","A");
		
		int cantPasajeros = 2;
		mascotaPedido = true;
		baulPedido = true;
		pedido = new Pedido(cliente, cantPasajeros, mascotaPedido, baulPedido, 1000, Constantes.ZONA_PELIGROSA);
		
		patente = "AB123CD";
		cantidadPlazas = 3;
		mascota = true;
		autoMascota = new Auto(patente, cantidadPlazas, mascota);
		autoSinMascota = new Auto(patente, cantidadPlazas, !mascota);
	}

	@Test
	public void test_getPuntajePedido_sinMascotas() {
		Assert.assertEquals(autoSinMascota.getPuntajePedido(pedido), null);
	}
	
	@Test
	public void test_getPuntajePedido_conMascotas() {
		Assert.assertTrue(autoMascota.getPuntajePedido(pedido) != null);
	}
	
	@Test
	public void test_getPuntajePedido_excesoCapacidad() {
		int cantPasajeros = autoMascota.getCantidadPlazas() + 1;
		Pedido pedido = new Pedido(cliente, cantPasajeros, true, true, 1000, Constantes.ZONA_PELIGROSA);
		Assert.assertEquals(autoMascota.getPuntajePedido(pedido), null);
	}
	
	@Test
	public void test_getPuntajePedido_capacidadValida() {
		int cantPasajeros = autoMascota.getCantidadPlazas();
		Pedido pedido = new Pedido(cliente, cantPasajeros, true, true, 1000, Constantes.ZONA_PELIGROSA);
		Assert.assertTrue(autoMascota.getPuntajePedido(pedido) != null);
	}
	
	@Test
	public void test_getPuntajePedido_usoBaul() {
		int cantPasajeros = autoMascota.getCantidadPlazas();
		Pedido pedido = new Pedido(cliente, cantPasajeros, true, true, 1000, Constantes.ZONA_PELIGROSA);
		Assert.assertTrue(autoMascota.getPuntajePedido(pedido) != null);
	}
	
	

}
