package test_modeloDatos;

import static org.junit.Assert.*;


import org.junit.Before;
import org.junit.Test;

import junit.framework.Assert;
import util.Constantes;
import modeloDatos.Cliente;
import modeloDatos.Pedido;

public class Test_Pedido {

	
	int cantidadPasajeros;
	boolean mascota; 
	boolean baul; 
	int km; 
	String zona;
	Pedido pedido;

	Cliente cliente; 
	String pass = "123456789";
	String nombreReal = "Juan Perez";
	String nombreUsuario = "juanzerPerez";
	
	
	@Before
	public void setUp() throws Exception {
		cliente = new Cliente(nombreUsuario, pass, nombreReal);
		
		cantidadPasajeros = 1;
		km = 1000;
		zona = Constantes.ZONA_PELIGROSA;
		baul = true;
		mascota = false;
		
		pedido = new Pedido(cliente, cantidadPasajeros, mascota, baul, km, zona);
	
	}

	@Test	
	public void test_getCliente() {
		Assert.assertEquals(pedido.getCliente(), cliente);
	}
	
	@Test	
	public void test_isBaul() {
		Assert.assertEquals(pedido.isBaul(), baul);
	}

	@Test	
	public void test_isMascota() {
		Assert.assertEquals(pedido.isMascota(), mascota);
	}
	
	@Test	
	public void test_getKm() {
		Assert.assertEquals(pedido.getKm(), km);
	}
	
	
	
}
