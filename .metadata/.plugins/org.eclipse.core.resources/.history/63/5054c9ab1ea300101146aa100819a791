package test_modeloDatos;

import static org.junit.Assert.*;

import org.junit.Before;
import org.junit.Test;

import junit.framework.Assert;
import modeloDatos.Cliente;
import modeloDatos.Combi;
import modeloDatos.Pedido;
import util.Constantes;

public class Test_2_Combi {

	
	
	private Combi combiMascota;
	private Combi combiSinMascota;
	
	private int cantidadPlazas = 8;
	private boolean mascota = true;
	private String patente = "AB123CD";
	
	private Cliente cliente;
	private final int cantidadPasajeros = 7;
	private final boolean baul = true;
	private final int km = 1000;
	private final String zona = Constantes.ZONA_SIN_ASFALTAR;
	
	private Pedido pedidoMascotaYbaul;
	private Pedido pedidoSinMascota;
	
	@Before
	public void setUp() throws Exception {
		
		cliente = new Cliente("juanzerPerez", "123456789", "Juan Perez");
		
		pedidoMascotaYbaul = new Pedido(cliente, cantidadPasajeros, mascota, baul, km, zona);
		pedidoSinMascota = new Pedido(cliente, cantidadPasajeros, !mascota, !baul, km, zona);
		
		combiMascota = new Combi(patente, cantidadPlazas, mascota);
		combiSinMascota = new Combi(patente, cantidadPlazas, !mascota);
	}

	@Test
	public void test_getPuntaje_noPoderLlevarMascota() {
		Assert.assertEquals(combiSinMascota.getPuntajePedido(pedidoMascotaYbaul), null);
	}

	
	@Test
	public void test_getPuntaje_llevarMascota() {
		Assert.assertNotNull(combiMascota.getPuntajePedido(pedidoMascotaYbaul));
	}
	
	@Test
	public void test_getPuntaje_excesoCapacidad() {
		int pasajerosExceso = combiMascota.getCantidadPlazas() + 1;
		Pedido pedidoExceso = new Pedido(cliente, pasajerosExceso, mascota, baul, km, zona);
		Assert.assertEquals(combiSinMascota.getPuntajePedido(pedidoMascotaYbaul), null);
	}	

}
