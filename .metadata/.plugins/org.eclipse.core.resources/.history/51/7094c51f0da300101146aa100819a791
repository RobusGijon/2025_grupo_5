package test_modeloDatos;

import static org.junit.Assert.*;
import org.junit.Before;
import org.junit.Test;
import modeloDatos.Auto;
import modeloDatos.Cliente;
import modeloDatos.Pedido;
import util.Constantes;

public class Test_2_Auto {
	
	private Auto autoMascota;
	private Auto autoSinMascota;
	private Cliente cliente;
	private Pedido pedidoConMascota;
	
	private static final String PATENTE_TEST = "AB123CD";
	private static final int CANTIDAD_PLAZAS = 3;
	private static final int CANT_PASAJEROS = 2;
	private static final int KM_TEST = 1000;
	
	@Before
	public void setUp() throws Exception {
		// Arrange - Preparación de objetos comunes
		cliente = new Cliente("Juan", "Perez", "123456789");
		
		pedidoConMascota = new Pedido(
			cliente, 
			CANT_PASAJEROS, 
			true,  // mascota
			true,  // baul
			KM_TEST, 
			Constantes.ZONA_PELIGROSA
		);
		
		autoMascota = new Auto(PATENTE_TEST, CANTIDAD_PLAZAS, true);
		autoSinMascota = new Auto(PATENTE_TEST, CANTIDAD_PLAZAS, false);
	}
	
	@Test
	public void testGetPuntajePedido_AutoSinMascota_DeberiaRetornarNull() {
		// Act
		Integer puntaje = autoSinMascota.getPuntajePedido(pedidoConMascota);
		
		// Assert
		assertNull("Un auto sin mascota no debería aceptar pedidos con mascota", puntaje);
	}
	
	@Test
	public void testGetPuntajePedido_AutoConMascota_DeberiaRetornarPuntaje() {
		// Act
		Integer puntaje = autoMascota.getPuntajePedido(pedidoConMascota);
		
		// Assert
		assertNotNull("Un auto con mascota debería aceptar pedidos con mascota", puntaje);
		assertTrue("El puntaje debería ser mayor a 0", puntaje > 0);
	}
	
	@Test
	public void testGetPuntajePedido_ExcesoCapacidad_DeberiaRetornarNull() {
		// Arrange
		int cantPasajerosExcedida = autoMascota.getCantidadPlazas() + 1;
		Pedido pedidoExcedido = new Pedido(
			cliente, 
			cantPasajerosExcedida, 
			true, 
			true, 
			KM_TEST, 
			Constantes.ZONA_PELIGROSA
		);
		
		// Act
		Integer puntaje = autoMascota.getPuntajePedido(pedidoExcedido);
		
		// Assert
		assertNull("No debería aceptar pedidos que excedan la capacidad", puntaje);
	}
	
	@Test
	public void testGetPuntajePedido_CapacidadMaxima_DeberiaRetornarPuntaje() {
		// Arrange
		int cantPasajerosMaxima = autoMascota.getCantidadPlazas();
		Pedido pedidoMaximo = new Pedido(
			cliente, 
			cantPasajerosMaxima, 
			true, 
			true, 
			KM_TEST, 
			Constantes.ZONA_PELIGROSA
		);
		
		// Act
		Integer puntaje = autoMascota.getPuntajePedido(pedidoMaximo);
		
		// Assert
		assertNotNull("Debería aceptar pedidos con capacidad máxima", puntaje);
		assertTrue("El puntaje debería ser mayor a 0", puntaje > 0);
	}
	
	@Test
	public void testGetPuntajePedido_SinMascotaEnPedido_DeberiaRetornarPuntaje() {
		// Arrange
		Pedido pedidoSinMascota = new Pedido(
			cliente, 
			CANT_PASAJEROS, 
			false,  // sin mascota
			true, 
			KM_TEST, 
			Constantes.ZONA_PELIGROSA
		);
		
		// Act
		Integer puntajeConMascota = autoMascota.getPuntajePedido(pedidoSinMascota);
		Integer puntajeSinMascota = autoSinMascota.getPuntajePedido(pedidoSinMascota);
		
		// Assert
		assertNotNull("Auto con mascota debería aceptar pedidos sin mascota", puntajeConMascota);
		assertNotNull("Auto sin mascota debería aceptar pedidos sin mascota", puntajeSinMascota);
	}
}